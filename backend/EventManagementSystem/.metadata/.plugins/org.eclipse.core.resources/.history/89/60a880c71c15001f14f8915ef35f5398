package com.eventmangementsystem.entity;

import javax.validation.constraints.NotBlank;
import javax.validation.constraints.NotNull;

public class BookingDTO {
    private int eventId;
    private String eventName;
    
    @NotBlank(message = "Customer name is required")
    private String customerName;
    
    @NotBlank(message = "Customer number is required")
    private String customerNumber;
    
    @NotNull(message = "Number of tickets must be specified")
    private int numberOfTickets;
    
    private Boolean bookingStatus;
    private String role;

    // Constructors
    public BookingDTO() {
    }

    public BookingDTO(int eventId, String eventName, String customerName, String customerNumber, int numberOfTickets, Boolean bookingStatus, String role) {
        this.eventId = eventId;
        this.eventName = eventName;
        this.customerName = customerName;
        this.customerNumber = customerNumber;
        this.numberOfTickets = numberOfTickets;
        this.bookingStatus = bookingStatus;
        this.role = role;
    }

    // Getters and setters
    public int getEventId() {
        return eventId;
    }

    public void setEventId(int eventId) {
        this.eventId = eventId;
    }

    public String getEventName() {
        return eventName;
    }

    public void setEventName(String eventName) {
        this.eventName = eventName;
    }

    public String getCustomerName() {
        return customerName;
    }

    public void setCustomerName(String customerName) {
        this.customerName = customerName;
    }

    public String getCustomerNumber() {
        return customerNumber;
    }

    public void setCustomerNumber(String customerNumber) {
        this.customerNumber = customerNumber;
    }

    public int getNumberOfTickets() {
        return numberOfTickets;
    }

    public void setNumberOfTickets(int numberOfTickets) {
        this.numberOfTickets = numberOfTickets;
    }

    public Boolean getBookingStatus() {
        return bookingStatus;
    }

    public void setBookingStatus(Boolean bookingStatus) {
        this.bookingStatus = bookingStatus;
    }

    public String getRole() {
        return role;
    }

    public void setRole(String role) {
        this.role = role;
    }
}
